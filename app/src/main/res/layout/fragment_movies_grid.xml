<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gridview_background"
    android:orientation="vertical">

    <include
        android:id="@+id/spinner_progress"
        layout="@layout/layout_progress_spinner" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movies_grid_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <include
        android:id="@+id/no_internet_layout"
        layout="@layout/layout_no_internet" />

    <include
        android:id="@+id/no_favorites_layout"
        layout="@layout/layout_no_favorites" />

</LinearLayout>